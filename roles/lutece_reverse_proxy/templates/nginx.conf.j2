server {
  listen 443 ssl;

  server_name cloud.alxs.fr;

  location / {
    proxy_pass              https://{{ rothomagus_static_ip }}:443;


    proxy_set_header        X-Real-IP         $remote_addr;
    proxy_set_header        X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header        X-Forwarded-Host  $host;
    proxy_set_header        X-Forwarded-Proto $scheme;
    proxy_set_header        X-Forwarded-Ssl   on;
    proxy_set_header        X-Forwarded-Port  $server_port;
    proxy_set_header        Host              $http_host;
    proxy_redirect          off;

    proxy_ssl_server_name   on;
  }

  ssl_certificate /etc/letsencrypt/live/cloud.alxs.fr/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/cloud.alxs.fr/privkey.pem;
}

server {
  listen 80;
  listen [::]:80;

  server_name cloud.alxs.fr;

  if ($host = cloud.alxs.fr) {
    return 301 https://$host$request_uri;
  }

  return 404;
}
